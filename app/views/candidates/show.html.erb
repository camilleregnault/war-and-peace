<div class="container"> 
  <div class="header">
    <h1>Candidates#show</h1>
  </div>

    <div class="card-list">
        <h2><%= @candidate.name %></h2>
        <br>
        <div class="avatar-circle" >
          <%= cl_image_tag @candidate.photo, crop: :scale, class:"card-avatar" %> 
        </div>
        <p><%= '💙 ' %><%= @candidate.popularity_points %><%= '% de popularité' %> 
        <br>
        <%= '⚡ ' %><%= @candidate.attack_strength %><%= ' points de force' %></p>
        <br>
        <div class="card-buttons">
          <%= link_to '💫', edit_candidate_path(@candidate.id), class:"btn edit-btn", title:"Edit" %> 
          <%= link_to '✖️', @candidate, data: { confirm: 'Are you sure?' }, method: :delete, class:"btn delete-btn", title:'Delete' %>
        </div>
    </div>
          <%= link_to "Liste des candidats", candidates_path, class:"btn btn-info" %>
</div>  

