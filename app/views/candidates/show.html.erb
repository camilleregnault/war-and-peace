<div class="container">
  <h1>Candidates#show</h1>

  <h1><%= @candidate.name %></h1>
    <%= cl_image_tag @candidate.photo, width: 200, crop: :scale%>
      <ul>
        <li>
        <%= @candidate.popularity_points%> %
        </li>
        <li>
        <%= @candidate.attack_strength %>
        </li>
      </ul>
    
    <%= link_to 'Edit', edit_candidate_path(@candidate.id), class:"btn btn-warning" %> |
    <%= link_to '🗑️', @candidate, data: { confirm: 'Are you sure?' }, method: :delete, class:"btn btn-danger" %> |
    <%= link_to "See all candidates", candidates_path, class:"btn btn-info" %>
</div>    