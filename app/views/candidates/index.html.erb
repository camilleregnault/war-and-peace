<div class="container">
  <div class="header">
    <h1>Candidates#index</h1>
    <p>Display all candidates</p>
    <%= link_to "Lancer une campagne",  fights_path , class:"btn btn-warning" %>
    <%= link_to "Nouveau candidat", new_candidate_path, class: 'btn btn-info' %>
    <%= link_to "Historique", fights_history_path, class:"btn btn-info" %>
  </div>
  <div class="list-group">
    <% @candidates.each do |candidate| %>
      <div class="card-list">
        <div class="avatar-circle" >
          <%= cl_image_tag candidate.photo, crop: :scale, class:"card-avatar" %> 
        </div>
        <%= link_to candidate.name, candidate_path(candidate.id), class:"card-title" %>
        <div class="card-buttons">
          
          <%= link_to "👁", candidate_path(candidate.id), class:"btn watch-btn", title:"Watch" %>
          
          <%= link_to "💫",  edit_candidate_path(candidate.id), class:"btn edit-btn", title:"Edit"%>                      
          
          <%= link_to "✖️", candidate, method: :delete, class:"btn delete-btn", 
                      data: { confirm: "Delete #{candidate.name} ?" }, title:"Delete"%> 
        </div>
      </div>
    <% end %>
  </div>
</div>
