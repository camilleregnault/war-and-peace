<div class="container">
  <div class="header">
    <h1>Résultat du scrutin</h1>
  </div>

  <div class="card-list winner-looser-list">
    <div>
      <h2> ✔️Gagnant.e 🍾</h2>
      <div class="avatar-circle" >
        <%= cl_image_tag @winner.photo, width: 200, crop: :scale, class:"card-avatar"%>
      </div>  
      <h3><%= @winner.name %></h3> 
      <p><%= @fight_result['winner_nb_attack'] %> attaque.s</p>
    </div>
    <div>
      <h2>❌ Perdant.e</h2>
      <div class="avatar-circle" >
        <%= cl_image_tag @looser.photo, width: 200, crop: :scale, class:"card-avatar"%>
      </div>
      <h3><%= @looser.name %></h3>
      <p><%= @fight_result['looser_nb_attack'] %> attaque.s</p>
    </div>
  </div>

  <div class="card-list history-list">
    <div class="container">
      <h2>📃Détail de la campagne </h2>
        <% @fight_result['detail'].each do |line| %>
          <%= line %>
          <br/>
        <% end %>
        <br>
    </div>
  </div>
 
  <%= link_to "Retour", request.referer.present? ? request.referer : default_path, class:"btn btn-info" %>
</div>