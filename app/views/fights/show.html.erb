<div class="container">
  <div class="header">
    <h1>Résultat du scrutin</h1>
      <p>Find me in app/views/fights/show.html.erb</p>
  </div>
      <h2> ✔️Gagnant 🍾</h2>
        <%= cl_image_tag @winner.photo, width: 200, crop: :scale%>
        <p><%= @winner.name %></p> 
        <p><%= @fight_result['winner_nb_attack'] %></p>


      <h2>❌ Perdant</h2>
        <%= cl_image_tag @looser.photo, width: 200, crop: :scale%>
        <p><%= @looser.name %></p>
        <p><%= @fight_result['looser_nb_attack'] %></p>
        
      <h2>📃Détail de la campagne </h2>
        <% @fight_result['detail'].each do |line| %>
          <%= line %>
          <br/>
        <% end %>
      <br>
  <%= link_to "Retour", request.referer.present? ? request.referer : default_path, class:"btn btn-info" %>
</div>